<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="studyPlanners" styleClass="primitives" stylesheets="@../../css/common/base.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qut.cab302_project_pomodora.controller.StudyPlannersController">
   <StackPane styleClass="theme">
      <BorderPane fx:id="contentPane" prefHeight="1080.0" prefWidth="1920.0" styleClass="window-background">
         <left>
            <fx:include fx:id="navbar" source="../components/side-navbar.fxml" />
         </left>
         <center>
            <AnchorPane prefHeight="1080.0" prefWidth="1828.0" styleClass="window-background" BorderPane.alignment="CENTER">
               <ScrollPane fitToWidth="true" hbarPolicy="NEVER" layoutX="1.0" prefHeight="1080.0" prefWidth="1762.0" styleClass="window-background" vbarPolicy="NEVER">
                  <Group>
                     <!-- This is here to fill the background regardless of if there are study plans or not. -->
                     <Pane prefHeight="1080.0" prefWidth="1763.0" styleClass="window-background" />

                     <VBox prefWidth="1763.0" spacing="50" styleClass="window-background">
                        <Group>
                           <Label prefHeight="76.0" prefWidth="346.0" text="Active Study Plans">
                              <font>
                                 <Font size="40.0" />
                              </font>
                           </Label>
                           <GridPane fx:id="activeStudyPlansGrid" hgap="20.0" layoutX="16.0" layoutY="89.0" prefWidth="1700.0" vgap="30.0">
                              <columnConstraints>
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.33" />
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.33" />
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.33" />
                              </columnConstraints>
                              <Button mnemonicParsing="false" onAction="#createNewStudyPlan" prefHeight="356.0" prefWidth="553.0" styleClass="add-new-study-button" text="+" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                 <font>
                                    <Font size="120.0" />
                                 </font>
                              </Button>
                              <rowConstraints>
                                 <RowConstraints />
                              </rowConstraints>
                              <!-- Active study plan VBoxes will be added here by the controller -->
                           </GridPane>
                        </Group>
                        <Group>
                           <Label prefHeight="76.0" prefWidth="346.0" text="Past Study Plans">
                              <font>
                                 <Font size="40.0" />
                              </font>
                           </Label>

                           <GridPane fx:id="pastStudyPlansGrid" hgap="20.0" layoutX="16.0" layoutY="89.0" prefWidth="1700.0" vgap="30.0">
                              <columnConstraints>
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.33" />
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.33" />
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.33" />
                              </columnConstraints>
                              <!-- Past study plan VBoxes will be added here by the controller -->
                           </GridPane>
                        </Group>
                     </VBox>
                  </Group>
               </ScrollPane>
               <Pane layoutX="1633.0" prefHeight="61.0" prefWidth="130.0">
                  <fx:include source="../components/user-profile-nobar.fxml" />
               </Pane>
            </AnchorPane>
         </center>
      </BorderPane>
      <!-- Overlays -->
      <StackPane fx:id="newStudyPlanPopUp" layoutX="366.0" layoutY="103.0" prefHeight="900.0" prefWidth="900.0" visible="false">
         <children>
            <StackPane styleClass="overlay-shadow" />
            <AnchorPane layoutX="586.0" layoutY="72.0">
               <children>
                  <AnchorPane layoutX="586.0" layoutY="72.0" prefHeight="900.0" prefWidth="900.0" styleClass="brand-box">
                     <children>
                        <Label fx:id="createStudyPlanPopUpLabel" layoutX="53.0" layoutY="35.0" text="Create New Study Plan">
                           <font>
                              <Font size="42.0" />
                           </font>
                        </Label>
                        <Label fx:id="createStudyPlanDescriptionLabel" layoutX="57.0" layoutY="90.0" prefHeight="190.0" prefWidth="780.0" text="Enter in the description of what you would like to complete and Pomodora will generate a customized study plan for you." wrapText="true">
                           <font>
                              <Font size="32.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="promptEntryTextArea" layoutX="57.0" layoutY="277.0" prefHeight="250.0" prefWidth="778.0" promptText="Enter description here...">
                           <font>
                              <Font size="28.0" />
                           </font>
                        </TextArea>
                        <Label fx:id="totalStudyHoursLabel" layoutX="55.0" layoutY="530.0" prefHeight="97.0" prefWidth="303.0" text="Total hours of study ">
                           <font>
                              <Font size="32.0" />
                           </font>
                        </Label>
                        <Label fx:id="optionalHoursLabel" layoutX="54.0" layoutY="575.0" prefHeight="88.0" prefWidth="245.0" style="-fx-font-style: italic;" text="(optional)">
                           <font>
                              <Font size="32.0" />
                           </font>
                        </Label>
                        <TextField fx:id="studyHoursEntryTextField" alignment="CENTER" layoutX="357.0" layoutY="565.0" prefHeight="73.0" prefWidth="114.0" promptText="Enter">
                           <font>
                              <Font size="28.0" />
                           </font>
                        </TextField>
                        <Button fx:id="generateStudyPlanButton" layoutX="65.0" layoutY="736.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="200.0" styleClass="button-secondary" text="Generate" textFill="WHITE">
                           <font>
                              <Font size="28.0" />
                           </font>
                        </Button>
                        <Button fx:id="closeCreateStudyPlanPopUpButton" layoutX="625.0" layoutY="736.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="200.0" styleClass="button-secondary" text="Close" textFill="WHITE">
                           <font>
                              <Font size="28.0" />
                           </font>
                        </Button>
                     </children>
                  </AnchorPane>
               </children>
            </AnchorPane>
         </children>
      </StackPane>
      <StackPane fx:id="studyPlanDetailsPopUp" layoutX="366.0" layoutY="103.0" prefHeight="900.0" prefWidth="900.0" visible="true">
         <children>
            <StackPane styleClass="overlay-shadow" />
            <AnchorPane layoutX="586.0" layoutY="72.0">
               <children>
                  <AnchorPane layoutX="586.0" layoutY="72.0" prefHeight="900.0" prefWidth="900.0" styleClass="brand-box">
                     <children>
                        <Label fx:id="studyPlanDetailsPopUpLabel" layoutX="63.0" layoutY="40.0" text="Study Plan:">
                           <font>
                              <Font size="42.0" />
                           </font>
                        </Label>
                        <ScrollPane fx:id="taskListScrollBox" hbarPolicy="NEVER" layoutX="61.0" layoutY="118.0" prefHeight="590.0" prefWidth="777.0" styleClass="close-button" vbarPolicy="ALWAYS">
                           <content>
                              <VBox fx:id="taskListVBox" prefHeight="588.0" prefWidth="760.0" spacing="10.0" styleClass="current-page-nav-button" />
                           </content>
                        </ScrollPane>
                        <Button fx:id="resumeStudyPlanButton" layoutX="65.0" layoutY="768.0" mnemonicParsing="false" prefHeight="55.0" prefWidth="150.0" text="Resume">
                           <font>
                              <Font size="28.0" />
                           </font>
                        </Button>
                        <Button fx:id="closeStudyPlanPopUpButton" layoutX="680.0" layoutY="769.0" mnemonicParsing="false" prefHeight="59.0" prefWidth="150.0" text="Close">
                           <font>
                              <Font size="28.0" />
                           </font>
                        </Button>
                     </children></AnchorPane>
               </children>
            </AnchorPane>
         </children>
      </StackPane>
   </StackPane>
</StackPane>
