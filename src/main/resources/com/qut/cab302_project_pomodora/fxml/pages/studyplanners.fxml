<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="studyPlanners" styleClass="primitives" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qut.cab302_project_pomodora.controller.StudyPlannersController">
   <StackPane styleClass="theme">
      <BorderPane fx:id="contentPane" prefHeight="1080.0" prefWidth="1920.0" styleClass="window-background">
         <left>
            <fx:include source="../components/side-navbar.fxml" fx:id="navbar"/>
         </left>
         <center>
            <AnchorPane prefHeight="1080.0" prefWidth="1828.0" styleClass="window-background" BorderPane.alignment="CENTER">
               <ScrollPane fitToWidth="true" hbarPolicy="NEVER" layoutX="1.0" prefHeight="1080.0" prefWidth="1762.0" styleClass="window-background" vbarPolicy="NEVER">
                  <Group>
                     <!-- This is here to fill the background regardless of if there are study plans or not. -->
                     <Pane prefHeight="1080.0" prefWidth="1763.0" styleClass="window-background"/>

                     <VBox prefWidth="1763.0" spacing="50" styleClass="window-background">
                        <Group>
                           <Label prefHeight="76.0" prefWidth="346.0" text="Active Study Plans">
                              <font>
                                 <Font size="40.0"/>
                              </font>
                           </Label>
                           <GridPane fx:id="activeStudyPlansGrid" hgap="20.0" layoutX="16.0" layoutY="89.0" prefWidth="1700.0" vgap="30.0">
                              <columnConstraints>
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.33"/>
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.33"/>
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.33"/>
                              </columnConstraints>
                              <Button mnemonicParsing="false" onAction="#createNewStudyPlan"
                                      prefHeight="356.0" prefWidth="553.0"
                                      styleClass="add-new-study-button" text="+" GridPane.columnIndex="0"
                                      GridPane.rowIndex="0">
                                 <font>
                                    <Font size="120.0"/>
                                 </font>
                              </Button>
                              <!-- Active study plan VBoxes will be added here by the controller -->
                           </GridPane>
                        </Group>
                        <Group>
                           <Label prefHeight="76.0" prefWidth="346.0" text="Past Study Plans">
                              <font>
                                 <Font size="40.0"/>
                              </font>
                           </Label>

                           <GridPane fx:id="pastStudyPlansGrid" hgap="20.0" layoutX="16.0" layoutY="89.0" prefWidth="1700.0" vgap="30.0">
                              <columnConstraints>
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.33"/>
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.33"/>
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.33"/>
                              </columnConstraints>
                              <!-- Past study plan VBoxes will be added here by the controller -->
                           </GridPane>
                        </Group>
                     </VBox>
                  </Group>
               </ScrollPane>
               <Pane layoutX="1633.0" prefHeight="61.0" prefWidth="130.0">
                  <fx:include source="../components/user-profile-nobar.fxml"/>
               </Pane>
            </AnchorPane>
         </center>
      </BorderPane>
   </StackPane>
</StackPane>
