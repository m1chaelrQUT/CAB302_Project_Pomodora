      <AnchorPane fx:id="userProfilePane" prefHeight="60.0" prefWidth="130.0" styleClass="pomodora-box">
          <Label fx:id="usernameLabel" layoutX="59.0" layoutY="7.0" text="User _" textFill="WHITE">
              <font>
                  <Font size="15.0" />
              </font>
          </Label>
          <ImageView fx:id="rankShieldIcon" fitHeight="37.0" fitWidth="34.0" layoutY="11.0" pickOnBounds="true" preserveRatio="true">
              <Image url="@../../images/user-level-shield.png" />
          </ImageView>
          <Label fx:id="userRankLabel" layoutX="14.0" layoutY="17.0" text="?" />
          <Rectangle fx:id="totalProgressBar" arcHeight="5.0" arcWidth="5.0" fill="#dcdcdc" height="13.0" layoutX="36.0" layoutY="35.0" stroke="BLACK" strokeType="INSIDE" width="86.0" AnchorPane.leftAnchor="35.0" AnchorPane.rightAnchor="0.0" />
          <Rectangle fx:id="userProgressBar" arcHeight="5.0" arcWidth="5.0" fill="#52e148" height="13.0" layoutX="36.0" layoutY="35.0" stroke="BLACK" strokeType="INSIDE" width="52.0" AnchorPane.leftAnchor="35.0" AnchorPane.rightAnchor="0.0" />
      </AnchorPane>
</Pane>
